,
"${app_name}": {
        "class": "Application",
        "template": "http",
        "serviceMain": {
            "class": "Service_HTTPS",
            "virtualAddresses": ${vs_server_address},
            "virtualPort": ${vs_server_port},
            "pool": "${pool_name}"
        },
        "${pool_name}": {
            "class": "Pool",
            "monitors": [
                "http"
            ],
            "members": [{
                "servicePort": ${service_port},
                "serverAddresses": ${service_address},
                "shareNodes": true
            }]
        }
    }